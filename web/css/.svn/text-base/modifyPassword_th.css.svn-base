body {
	overflow-x: hidden;
	height:100%;
	padding-bottom: 20px;
	background: url(../img/beauty-bg.png) center repeat-y;
 	background-size:100%;
	background-position: center;
}
.whole-c {
	padding-bottom:20px;
	height: 100%!important;
}
.main-content{
 	width: 800px;
   margin: 48px auto 40px;
   padding-top:40px;
   height: 100%;
}
.step-list {
	background-color: rgba(255,255,255,.65);
	color:#363434;
}
.step-list li {
	text-align:center;
	display: inline-block;
	width:49%;
	padding:8px 15px;
	position: relative;
}
.step-list li span {
	padding:6px 0;
}
.step-active {
	border-bottom: 4px solid #ffba01;
}
.step-list li i {
	display:inline-block;
	position: absolute;
	right:15px;
	top:0;
	height:36px;
	line-height: 36px;
	font-size:20px;
}
.s-one {
	width:240px;
	margin:10px auto 20px;
	text-align: center;
}
.s-one input {
	display: block;
	background-color: rgba(255,255,255,.9);
	border:none;
	outline:none;
	width:100%;
	margin-bottom: 16px;
	padding:6px 10px;
}
.sure-r {
	width:100%;
	height:32px;
	background-color: #ffba01;
	color:#fff;
	border:none;
}
.s-three {
	width:600px;
	margin:10px auto 20px;
	text-align: center;
	display:none;
	background-color: rgba(255,255,255,.65);
	padding:20px 40px 40px;
	font-family: "微软雅黑";
}
.s-three .t-head{
	font-size:18px;
}
.t-wrap {
	position: relative;
	padding-bottom: 20px;
}
.t-wrap .jump {
	position: absolute;
	left:58%;
	margin-top:10px;
}
.t-wrap .jump span {
	color:#f20c0c;
	margin-right:4px;
}
.s-wrap {
	width:300px;
	margin: 0 auto;
	padding:10px 30px 30px;
	background-color: rgba(255,255,255,.65);
	margin-top: 40px;
	position: relative;
}
